<odoo>
  <data>


     <record id="product_landing_cost_checking" model="ir.ui.view">
            <field name="name">product.template.landing.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
              <field name="list_price" position="after">
                    <field string="Landing Cost" name="landing_cost" widget="monetary" option="{'currency_field':'currency_id'}"/>
                </field>


            </field>
    </record>


    <record id="product_product_landing_cost_checking" model="ir.ui.view">
            <field name="name">product.product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
              <field name="lst_price" position="after">
                    <field string="Landing Cost" name="landing_cost" widget="monetary" option="{'currency_field':'currency_id'}"/>
                </field>
            </field>
    </record>


  </data>
</odoo>